{
  "name": "react-tackle-box",
  "version": "2.1.0",
  "main": "index.js",
  "module": "es/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jquense/react-tackle-box.git"
  },
  "author": "Jason Quense <monastic.panic@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "semi": false,
