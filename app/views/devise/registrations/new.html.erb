<div class="page-wrapper bg-gra-01 p-t-180 p-b-100 font-poppins">
  <div class="wrapper wrapper--w780">
    <div class="card card-3">
<!--      <div class="card-heading">-->
<!--        <img src="/images/racer.png">-->
<!--      </div>-->
      <div class="card-body">
        <h2 class="title text-center">Реєстрація</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <%#= f.hidden_field :role, value: :racer %>
          <div class="input-group">
            <%= f.email_field :email, autocomplete: "email", class: 'input--style-3', placeholder: 'Email'  %>
          </div>
          <div class="input-group">
            <%= f.text_field :name, value: params[:name], autofocus: true, class: 'input--style-3', placeholder: "Ім'я"  %>
          </div>
          <div class="input-group">
            <%= f.password_field :password, autocomplete: "off", class: 'input--style-3', placeholder: 'Пароль' %>
          </div>
          <div class="input-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'input--style-3', placeholder: 'Повторити пароль' %>
          </div>
<!--          <div class="input-group">-->
            <%#= f.label 'Аватар' %>
            <%#= f.file_field :avatar, accept: 'image/png,image/jpeg'%>
<!--          </div>-->
          <div class="p-t-10">
            <%= f.submit "Зареєструватися", class: "btn btn--pill btn--green" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>