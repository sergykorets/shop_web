<div class="page-wrapper bg-gra-01 p-t-180 p-b-100 font-poppins d-flex">
  <div class="wrapper wrapper--w680">
    <%# if current_user.admin? %>
      <%#= react_component("SystemButtons", props: {admin: @admin}) %>
    <%# end %>
    <% if current_user.admin? %>
      <%= link_to 'Панель адміністратора', rails_admin_path, class: 'btn btn-primary' %>
    <% end %>
    <%= link_to "Вийти з профілю #{current_user.name}", destroy_user_session_path, class: 'btn btn-danger' %>
  </div>
  <div class="wrapper wrapper--w780">
    <div class="card card-3">
      <div class="card-body">
        <h2 class="title text-center">Редагувати профіль</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
          <div class="input-group">
            <%= f.email_field :email, autocomplete: "email", class: 'input--style-3', placeholder: 'Email'  %>
          </div>
          <div class="input-group">
            <%= f.text_field :name, class: 'input--style-3', placeholder: "Ім'я"  %>
          </div>
          <div class="input-group">
            <%= f.password_field :password, autocomplete: "off", class: 'input--style-3', placeholder: 'Змінити пароль' %>
          </div>
          <div class="input-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'input--style-3', placeholder: 'Повторити пароль' %>
          </div>
<!--          <div class="input-group">-->
            <%#= f.label 'Аватар' %>
            <%#= f.file_field :avatar, accept: 'image/png,image/jpeg'%>
<!--          </div>-->
          <div class="p-t-10">
            <%= f.submit "Зберегти", class: "btn btn--pill btn--green" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>